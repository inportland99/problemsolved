{# Testimonials Carousel #}
<section class="bg-base-200 py-16 lg:py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative overflow-hidden">
      <div id="testimonial-carousel" class="flex transition-transform duration-500 ease-in-out">
        {% for testimonial in testimonials %}
        <div class="w-full md:w-1/2 flex-shrink-0 px-4">
          <div class="card bg-base-100 shadow-xl rounded-2xl">
            <div class="card-body">
              <div class="flex mb-2">
                {% for i in range(0, testimonial.rating) %}
                <span class="text-warning text-xl">★</span>
                {% endfor %}
              </div>
              <p class="text-lg mb-4">"{{ testimonial.quote }}"</p>
              <div class="text-sm">
                <p class="font-semibold">– {{ testimonial.author }}</p>
                <p class="text-base-content/70">– {{ testimonial.organization }}</p>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
        {# Duplicate testimonials for infinite loop #}
        {% for testimonial in testimonials %}
        <div class="w-full md:w-1/2 flex-shrink-0 px-4">
          <div class="card bg-base-100 shadow-xl rounded-2xl">
            <div class="card-body">
              <div class="flex mb-2">
                {% for i in range(0, testimonial.rating) %}
                <span class="text-warning text-xl">★</span>
                {% endfor %}
              </div>
              <p class="text-lg mb-4">"{{ testimonial.quote }}"</p>
              <div class="text-sm">
                <p class="font-semibold">– {{ testimonial.author }}</p>
                <p class="text-base-content/70">– {{ testimonial.organization }}</p>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
  (function() {
    const carousel = document.getElementById('testimonial-carousel');
    const totalSlides = {{ testimonials | length }};
    let currentIndex = 0;
    let isTransitioning = false;

    function nextSlide() {
      if (isTransitioning) return;
      isTransitioning = true;
      
      currentIndex++;
      carousel.style.transition = 'transform 500ms ease-in-out';
      carousel.style.transform = `translateX(-${currentIndex * 50}%)`;
      
      // Reset to beginning when we reach the duplicate set
      if (currentIndex >= totalSlides) {
        setTimeout(() => {
          carousel.style.transition = 'none';
          currentIndex = 0;
          carousel.style.transform = 'translateX(0)';
          setTimeout(() => {
            isTransitioning = false;
          }, 50);
        }, 500);
      } else {
        setTimeout(() => {
          isTransitioning = false;
        }, 500);
      }
    }

    // Auto-advance every 5 seconds
    setInterval(nextSlide, 5000);
  })();
</script>
